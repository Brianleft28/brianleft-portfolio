# ═══════════════════════════════════════════════════════════════════════════
# DATABASE (MySQL 8)
# ═══════════════════════════════════════════════════════════════════════════
DB_HOST=db
DB_PORT=3306
DB_NAME=portfolio
DB_USER=portfolio
DB_PASSWORD=your_secure_password
DB_ROOT_PASSWORD=your_root_password

# ═══════════════════════════════════════════════════════════════════════════
# REDIS (Sessions + Cache)
# ═══════════════════════════════════════════════════════════════════════════
REDIS_HOST=redis
REDIS_PORT=6379

# ═══════════════════════════════════════════════════════════════════════════
# JWT Authentication
# ═══════════════════════════════════════════════════════════════════════════
JWT_SECRET=generate_a_secure_random_string_min_32_chars
JWT_REFRESH_SECRET=generate_another_secure_random_string

# ═══════════════════════════════════════════════════════════════════════════
# API (NestJS)
# ═══════════════════════════════════════════════════════════════════════════
GEMINI_API_KEY=your_gemini_api_key
API_PORT=4000
NODE_ENV=development

# ═══════════════════════════════════════════════════════════════════════════
# DOMAIN & CORS (Producción)
# ═══════════════════════════════════════════════════════════════════════════
# El dominio principal del portfolio (sin protocolo)
# Permite CORS para el dominio y todos sus subdominios (*.dominio.com)
PORTFOLIO_DOMAIN=pidgeonsolutions.com

# ═══════════════════════════════════════════════════════════════════════════
# ADMIN (Usuario inicial)
# ═══════════════════════════════════════════════════════════════════════════
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# ═══════════════════════════════════════════════════════════════════════════
# CLIENT (SvelteKit)
# ═══════════════════════════════════════════════════════════════════════════
PUBLIC_API_URL=http://localhost:4000
SESSION_SECRET=generate_a_session_secret_min_32_chars

# ═══════════════════════════════════════════════════════════════════════════
# SMTP (Email - Formulario de Contacto)
# ═══════════════════════════════════════════════════════════════════════════
# Gmail: usa smtp.gmail.com y una App Password
# SendGrid: usa smtp.sendgrid.net
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password_de_16_caracteres
SMTP_SECURE=false